@{
    ViewData["Title"] = "Home Page";
}
<hr />

@*<a asp-action="logout">Logout</a>*@
@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-controller="Account" asp-action="logout">
        <button type="submit" class="btn btn-default">Logout</button>
    </form>

}
<br />
@if (User.Identity.IsAuthenticated)
{
    <div>
        <h1>@User.Identity.Name</h1>
        <h2>AuthenticationType : @User.Identity.AuthenticationType</h2>
        <h3>Claims : </h3>
        @foreach (var claim in User.Claims)
        {
            <h4> @claim.Type:   @claim.Value </h4>

        }
        <p>Role: @User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Role)?.Value</p>

    </div>
}
